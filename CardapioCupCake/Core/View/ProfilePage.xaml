<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CardapioCupCake.Core.View.ProfilePage"
             BackgroundColor="White">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Grid WidthRequest="120" HeightRequest="120">
                    <Border StrokeShape="RoundRectangle 60" 
                            WidthRequest="120" 
                            HeightRequest="120" 
                            Stroke="#D81B60"
                            StrokeThickness="3"
                            Padding="2">
                        <Image Source="{Binding ProfileImageUrl}" 
                               Aspect="AspectFill" 
                               WidthRequest="110" 
                               HeightRequest="110"/>
                    </Border>

                    <Button Grid.Row="0" 
                            Command="{Binding SelectPhotoCommand}" 
                            Text="ðŸ“·" 
                            BackgroundColor="#D81B60"
                            TextColor="White"
                            CornerRadius="20"
                            WidthRequest="40"
                            HeightRequest="40"
                            HorizontalOptions="End"
                            VerticalOptions="End"
                            FontSize="Medium"
                            Padding="0"/>
                </Grid>

                <Label Text="{Binding UserProfile.Nome}" 
                       FontSize="Title" 
                       FontAttributes="Bold" 
                       TextColor="#D81B60"/>
            </VerticalStackLayout>
            <BoxView HeightRequest="1" Color="#CCCCCC" Margin="0, -10, 0, 0"/>

            <VerticalStackLayout Spacing="15">

                <Label Text="Nome" FontSize="Small" TextColor="Gray"/>
                <Entry Text="{Binding UserProfile.Nome}" 
                       Placeholder="Seu nome completo" 
                       TextColor="Black" 
                       Margin="0, -15, 0, 0"/>

                <Label Text="E-mail" FontSize="Small" TextColor="Gray"/>
                <Entry Text="{Binding UserProfile.Email}" 
                       Keyboard="Email"
                       Placeholder="seu@email.com" 
                       TextColor="Black" 
                       Margin="0, -15, 0, 0"/>

                <Label Text="Telefone" FontSize="Small" TextColor="Gray"/>
                <Entry Text="{Binding UserProfile.Telefone}" 
                       Keyboard="Telephone"
                       Placeholder="(XX) XXXXX-XXXX" 
                       TextColor="Black" 
                       Margin="0, -15, 0, 0"/>

                <Label Text="EndereÃ§o" FontSize="Small" TextColor="Gray"/>
                <Entry Text="{Binding UserProfile.Endereco}" 
                       Placeholder="Rua, NÃºmero, Bairro" 
                       TextColor="Black" 
                       Margin="0, -15, 0, 0"/>

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>